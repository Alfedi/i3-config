client.focused          #6F6E84 #3F3E4B #ffffff #2e9ef4	  #285577
client.focused_inactive #6F6E84 #575760 #ffffff #484e50	  #5f676a
client.unfocused        #222222 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c


default_border none
#hide_edge_borders smart
popup_during_fullscreen smart
force_display_urgency_hint 500 ms
focus_on_window_activation focus
focus_follows_mouse no
focus_wrapping force

bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks
# Archives
bindsym $mod+Shift+e exec thunar
# Solving problems with calendar i3blocks
for_window [class="Yad"] floating enable

# Shutdown computer
bindsym Control+Mod1+Delete exec /usr/share/i3blocks/shutdown_menu -p rofi
